---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="caixa !max-w-md py-12">
    <div class="text-2xl font-bold">TIPO DE VIÑO: BRANCO 11,5%</div>
    <div>100ml: E= 280 kJ/ 67 kcal</div>
    <div class="font-bold mt-12 mb-3 text-xl uppercase">Información nutricional</div>
    <hr class="border-2" />
    <div class="grid grid-cols-2 gap-y-3 mt-6">
      <div>Valor energético</div>
      <div class="text-right">280 kJ/ 67 kcal</div>
      <div>Grasas</div>
      <div class="text-right">0 g</div>
      <div>de las cuales saturadas</div>
      <div class="text-right">0 g</div>
      <hr class="col-span-2" />
      <div>Hidratos de carbono</div>
      <div class="text-right">0,8 g</div>
      <div>de las cuales azúcares</div>
      <div class="text-right">0,1 g</div>
      <hr class="col-span-2" />
      <div>Proteínas</div>
      <div class="text-right">0 g</div>
      <div>Sal</div>
      <div class="text-right">0 g</div>
    </div>
    <!-- Ingredientes -->
    <div class="font-bold mt-12 mb-3 text-xl uppercase">Ingredientes</div>
    <hr class="border-2" />
    <div class="mt-6">Uvas, conservadores (Bisulfito potásico (E-228))</div>
    <!-- Producto -->
    <div class="font-bold mt-12 mb-3 text-xl uppercase">Información del producto</div>
    <hr class="border-2" />
    <div class="grid grid-cols-2 gap-y-3 mt-6">
      <div>Tipo de producto</div>
      <div class="text-right">Vino</div>
      <hr class="col-span-2" />
      <div>alc.</div>
      <div class="text-right">11.5% vol.</div>
      <hr class="col-span-2" />
      <div>Año de cosecha</div>
      <div class="text-right">2024</div>
      <hr class="col-span-2" />
      <div>Cantidad neta</div>
      <div class="text-right">750 ml</div>
      <hr class="col-span-2" />
      <div>Contenido de azúcar</div>
      <div class="text-right">Seco</div>
      <hr class="col-span-2" />
      <div>Color del vino</div>
      <div class="text-right">Vino blanco</div>
    </div>
  </div>
</Layout>
